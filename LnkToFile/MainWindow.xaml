<Window x:Class="LnkToFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LnkToFile"
        mc:Ignorable="d"
        Title="LnkToFile" Height="237.668" Width="800" ResizeMode="CanMinimize">
    <Grid Height="217" VerticalAlignment="Top" Margin="0,0,0,-21">
        <Label Content="ショートカットファイルを実際のファイルに置き換えます。&#xD;&#xA;置き換え対象の存在するディレクトリを入力してください。" HorizontalAlignment="Left" Margin="103,40,0,0" VerticalAlignment="Top" Height="47" Width="285"/>
        <Button Content="実行" HorizontalAlignment="Left" Height="48" Margin="103,117,0,0" VerticalAlignment="Top" Width="133" AutomationProperties.Name="Enter" Click="Button_Click_Enter"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="103,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="519" Text="{Binding TargetPath}" Name ="TargetPathText"/>
        <Button Content="参照" HorizontalAlignment="Left" Height="25" Margin="622,87,0,0" VerticalAlignment="Top" Width="86" AutomationProperties.Name="RefDir" Click="Button_Click_RefDir"/>

    </Grid>
</Window>
